<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="start">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_bot_avatar"
        android:layout_marginEnd="12dp"
        android:contentDescription="Bot typing" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_bot_bubble"
        android:padding="12dp">

        <!-- Animated dots - animations auto-start -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_animation_1"
            android:animation="@anim/typing_dot1"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_animation_2"
            android:animation="@anim/typing_dot2"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_animation_3"
            android:animation="@anim/typing_dot3" />
    </LinearLayout>
</LinearLayout>
