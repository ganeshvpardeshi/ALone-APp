<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F"
    tools:context=".GetStartedActivity">

    <!-- App icon card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/iconCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        android:elevation="20dp"
        app:cardBackgroundColor="#706CFB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/app_logo_round"
            android:contentDescription="@string/app_name"
            app:shapeAppearanceOverlay="@style/RoundedLogoShape"
            app:strokeColor="@color/dark_bg"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/purple_900"
            app:strokeWidth="2dp" />
    </androidx.cardview.widget.CardView>

    <!-- App name -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALone"
        android:textColor="#E8E8F0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iconCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk to someone. Stay anonymous."
        android:textColor="#9A9AAF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Login MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:elevation="20dp"
        android:shadowColor="@color/purple_900"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        app:backgroundTint="#706CFB" />

    <!-- Sign Up MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#E8E8F0"
        android:textSize="20sp"
        android:elevation="20dp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:shadowColor="@color/purple_900"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        app:backgroundTint="#171720"
        app:strokeWidth="1dp"
        app:strokeColor="#2A2A35" />

    <!-- Bottom icons row -->
    <LinearLayout
        android:id="@+id/bottomRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <!-- Private -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                app:tint="#E8E8F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Private"
                android:textColor="#9A9AAF"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Safe -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_shield"
                app:tint="#E8E8F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Safe"
                android:textStyle="bold"
                android:textColor="#9A9AAF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Anonymous -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_ghost"
                app:tint="#E8E8F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Anonymous"
                android:textStyle="bold"
                android:textColor="#9A9AAF"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
